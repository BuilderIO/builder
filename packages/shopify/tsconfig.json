{
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "outDir": "dist",
    "types": ["jest"],
    "module": "esnext",
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "declaration": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declarationDir": "dist",
    "lib": ["dom", "esnext"],
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "./index.ts",
    "./src/**/*.ts",
    "./types.d.ts",
    "./test/**/*.ts",
    "./test/**/*.tsx",
    "./js/**/*.ts",
    "./track/**/*.ts",
    "./react/react.ts",
    "./react/**/*.tsx"
  ]
}
