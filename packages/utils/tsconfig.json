{
  "compilerOptions": {
    "target": "es5",                          
    "module": "ESNext",
    "strict": true, 
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,   
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "./index"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
