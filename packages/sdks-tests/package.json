{
  "name": "@sdk/tests",
  "description": "Workspace containing e2e tests for SDKs",
  "private": true,
  "scripts": {
    "build": "tsc",
    "dev": "tsc -w",
    "lint": "eslint --ext .ts,.tsx ./src/",
    "prepare-e2e": "echo $SERVER_NAME | tr ',' '\n' | xargs -I _ echo @e2e/_ | tr '\n' ',' | xargs -I _ yarn nx run-many -p _ -t build",
    "test": "yarn prepare-e2e && playwright test",
    "test:e2e": "TYPE=e2e yarn nx test",
    "test:snippet": "TYPE=snippet yarn nx test",
    "run-embedder": "node embedder/index.js",
    "install-playwright": "playwright install chromium --with-deps"
  },
  "type": "module",
  "main": "./dist/src/index.js",
  "module": "./dist/src/index.js",
  "exports": {
    ".": "./dist/src/index.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.37.1",
    "@types/traverse": "^0.6.32",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "eslint": "^8.12.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "nx": "^16.6.0",
    "nx-cloud": "^16.2.0",
    "traverse": "^0.6.7",
    "zod": "^3.20.2"
  },
  "nx": {
    "targets": {
      "build": {
        "dependsOn": [
          "^build",
          "lint"
        ]
      },
      "test": {
        "dependsOn": [
          "install-playwright"
        ]
      }
    }
  }
}
