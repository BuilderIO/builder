{
  "name": "@e2e/tests",
  "description": "Workspace containing e2e tests for SDKs",
  "private": true,
  "scripts": {
    "build": "tsc",
    "dev": "tsc -w",
    "test": "playwright test",
    "run-embedder": "node embedder/index.js",
    "install-playwright": "playwright install chromium --with-deps"
  },
  "type": "module",
  "main": "./dist/src/index.js",
  "module": "./dist/src/index.js",
  "exports": {
    "./shared.config": "./dist/shared.config.js",
    "./shared.config.js": "./dist/shared.config.js",
    ".": "./dist/src/index.js",
    "./*": "./dist/src/*.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.37.1",
    "@types/traverse": "^0.6.32",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "eslint": "^8.12.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "nx": "^16.6.0",
    "nx-cloud": "^16.2.0",
    "traverse": "^0.6.7",
    "zod": "^3.20.2"
  },
  "nx": {
    "targets": {
      "test": {
        "dependsOn": [
          "install-playwright"
        ]
      }
    }
  }
}
