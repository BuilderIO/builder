{
  "compilerOptions": {
    "target": "ES5",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "moduleResolution": "Node16",
    "module": "Node16",
    "skipLibCheck": true,
    "outDir": "dist",
    "declaration": true,
    "allowJs": true,
    // override types to remove jasmine `expect`
    "types": ["node"]
  },
  "include": [
    "src/**/*",
    "./playwright.config.ts",
    "../sdks/typings/**/*",
    "embedder/**/*",
    ".eslintrc.cjs"
  ]
}
