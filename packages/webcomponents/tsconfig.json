{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "ESNext",
    "lib": [
      "es5",
      "dom",
      "es2015.promise"
    ],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}