{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "jsx": "preserve",
    "jsxImportSource": "@builder.io/mitosis",
    "lib": ["dom", "ESNext"],
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    // needed to make sure vite/esbuild can bundle the code properly
    // https://vitejs.dev/guide/features.html#isolatedmodules
    // "isolatedModules": true,
    "module": "CommonJS",
    "moduleResolution": "Node16",
    "types": ["vitest/globals"],
    "paths": {
      "placeholder-runtime": ["./src/functions/evaluate/placeholder-runtime.js"]
    }
  },
  "include": ["src/**/*", "typings", "mitosis.config.js"]
}
