{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "target": "ES2018",
    "allowJs": true,
    "noEmitOnError": false,
    "noEmit": false,
    // Override: exclude jest types.
    "types": ["react-native"],
    // we don't use react-native, as that preserves the JSX tags
    "jsx": "react",
    "paths": {
      "placeholder-runtime": [
        "./src/functions/evaluate/browser-runtime/index.js"
      ]
    }
  },
  "include": ["typings/*.d.ts", "src/**/*"]
}
